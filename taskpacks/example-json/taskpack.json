{
  "id": "example.json.collector",
  "name": "JSON-Only Example Collector",
  "version": "0.1.0",
  "description": "Demo task pack using pure JSON format - no build step required",
  "inputs": {},
  "collectibles": [
    {
      "name": "page_title",
      "type": "string",
      "description": "The page title from the <title> tag"
    },
    {
      "name": "h1_text",
      "type": "string",
      "description": "The text content of the first <h1> element"
    }
  ],
  "flow": [
    {
      "id": "navigate",
      "type": "navigate",
      "label": "Navigate to example.com",
      "params": {
        "url": "https://example.com",
        "waitUntil": "networkidle"
      }
    },
    {
      "id": "sleep_after_navigate",
      "type": "sleep",
      "label": "Waiting after navigation",
      "params": {
        "durationMs": 2000
      }
    },
    {
      "id": "wait_for_h1",
      "type": "wait_for",
      "label": "Wait for h1 element to be visible",
      "params": {
        "selector": "h1",
        "visible": true,
        "timeoutMs": 5000
      }
    },
    {
      "id": "sleep_after_wait",
      "type": "sleep",
      "label": "Waiting after element wait",
      "params": {
        "durationMs": 1500
      }
    },
    {
      "id": "assert_h1_exists",
      "type": "assert",
      "label": "Verify h1 element exists",
      "params": {
        "selector": "h1",
        "visible": true
      }
    },
    {
      "id": "sleep_before_extract",
      "type": "sleep",
      "label": "Waiting before extraction",
      "params": {
        "durationMs": 1000
      }
    },
    {
      "id": "extract_title",
      "type": "extract_title",
      "label": "Extract page title",
      "params": {
        "out": "page_title"
      }
    },
    {
      "id": "sleep_between_extracts",
      "type": "sleep",
      "label": "Waiting between extractions",
      "params": {
        "durationMs": 1000
      }
    },
    {
      "id": "extract_h1",
      "type": "extract_text",
      "label": "Extract h1 text",
      "params": {
        "selector": "h1",
        "out": "h1_text",
        "first": true,
        "trim": true
      }
    },
    {
      "id": "sleep_final",
      "type": "sleep",
      "label": "Final wait before completion",
      "params": {
        "durationMs": 1500
      }
    }
  ]
}
